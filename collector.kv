<CollectorLayout>
    orientation: 'vertical'
    ActionBar:
        ActionView:
            ActionPrevious:
                title: ""
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
    ScreenManager:
        id: collector_screen_manager
        CollectorScreen:
            name: 'main_import_sreen'

<CollectorScreen@Screen>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Favourites'
            Label:
                text: 'File description'
        FileBrowserView:
            text: 'FileBrowser widget'

        Label:
            text: 'Collections panel'


[CustomListItem@SelectableView+BoxLayout]:
    size_hint_y: ctx.size_hint_y
    height: ctx.height
    ListItemButton:
        text: ctx.text
        halign: 'left'
        text_size: ctx.size
        is_selected: ctx.is_selected
